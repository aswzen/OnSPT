<% @sep="-" %><% @title="Manajemen Tugas" %><% @assign="class=active" %>

<h1>Daftar Tugas</h1>
<%= content_tag :div, notice, :class => 'alert alert-success' %>
<div class="page-heading">
    <%= link_to new_spt_path, :class => "btn btn-success pull-right" do %>
      Tambah Tugas <span class="glyphicon glyphicon-plus"></span>
    <% end %>                      
</div>
<div class="clearfix"></div>
<div class="page-table">
<table class="table table-striped">
  <thead>
    <tr>  
      <th>ID Tugas</th>
      <th>Tempat tujuan</th>
      <th>Lama tugas</th>
      <th>Jenis transportasi</th>
      <th>Maksud tugas</th>
      <th colspan="3"><center>Opsi</center></th>
    </tr>
  </thead>

  <tbody>
    <% @spts.each do |spt| %>
      <tr>
        <td><%= spt.id %></td>
        <td><%= spt.tempat_tujuan %></td>
        <td><%= spt.durasi_waktu %></td>
        <td><%= spt.jenis_transportasi %></td>
        <td><%= spt.maksud_tugas %></td>
        <td><%= link_to 'Lihat', spt %></td>
        <td><%= link_to 'Ubah', edit_spt_path(spt) %></td>
        <td><%= link_to 'Hapus', spt, method: :delete, data: { confirm: 'Apakah anda yakin?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

 <script type="text/javascript">
        $('.alert:empty').hide();
    </script>