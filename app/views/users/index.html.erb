<% @sep="-" %><% @title="Manajemen Karyawan" %><% @management="class=active" %>
<h1>Daftar Karyawan</h1>
<%= content_tag :div, notice, :class => 'alert alert-success' %>
<div class="page-heading">
    <%= link_to new_user_path, :class => "btn btn-success pull-right" do %>
      Tambah Karyawan <span class="glyphicon glyphicon-plus"></span>
    <% end %>
                            
</div>
<div class="clearfix"></div>
<div class="page-table">
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nama Depan</th>
      <th>Nama Belakang</th>
      <th>Jabatan</th>
      <th>Email</th>
      <th colspan="3"><center>Opsi</center></th>
    </tr>
  </thead>

  <tbody>
    <%  %>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.nama_depan %></td>
        <td><%= user.nama_belakang %></td>
        <td><%= user.jabatan %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Lihat', user, :class => 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Ubah', edit_user_path(user), :class => 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Hapus', user, method: :delete, data: { confirm: 'Apakah anda yakin?' }, :class => 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
    <script type="text/javascript">
        $('.alert:empty').hide();
    </script>